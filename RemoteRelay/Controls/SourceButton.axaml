<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RemoteRelay.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RemoteRelay.Controls.SourceButton"
             x:DataType="local:SourceButtonViewModel">

    <UserControl.Resources>
        <ControlTheme x:Key="{x:Type Button}" TargetType="Button">
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{Binding BackgroundColor}"/>
            </Style>
        </ControlTheme>
    </UserControl.Resources>

    <Button Command="{Binding SelectSource}"
        IsEnabled="{Binding IsEnabled}"
            Background="{Binding BackgroundColor}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch" 
            VerticalContentAlignment="Stretch" 
            Padding="15,45,15,45" 
            BorderBrush="Gray"
            BorderThickness="5">
        <Viewbox Stretch="Uniform">
            <TextBlock Text="{Binding SourceName}" Foreground="{Binding ForegroundColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" />
        </Viewbox>
    </Button>

</UserControl>